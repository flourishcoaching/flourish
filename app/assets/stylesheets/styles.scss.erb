$nav-bar: #27ae60;

@font-face {
  font-family: "heading-font";
  src: font-url("Bitter-Regular.ttf");
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: "heading-font";
  src: font-url("Bitter-Bold.ttf");
  font-weight: bold;
  font-style: normal;
}

@font-face {
  font-family: "heading-font";
  src: font-url("Bitter-Italic.ttf");
  font-weight: normal;
  font-style: italic;
}

@font-face {
  font-family: "body-font";
  src: font-url("Raleway-Bold.ttf");
  font-weight: bold;
  font-style: normal;
}

@font-face {
  font-family: "body-font";
  src: font-url("Raleway-Regular.ttf");
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: "body-font";
  src: font-url("Raleway-ExtraLight.ttf");
  font-weight: lighter;
  font-style: normal;
}

@font-face {
  font-family: "body-font";
  src: font-url("Raleway-Italic.ttf");
  font-weight: normal;
  font-style: italic;
}

ul.nav li {
  font-family: heading-font;
  font-size: .8em;
  padding-left: 1.5em;
  display: inline;
}

ul.nav {
  height: 2em;
  border: solid 2px #34495e;
  background: #34495e;
  list-style-type: none;
  margin: 0;
  padding-left: 3.8em;
}

ul.nav li a {
  color: white;
}

.top-bar .name h1 {
  font-family: heading-font;
  font-size: 3em;
  padding-top: 0.07em;
  padding-bottom: .3em;
  color: white;
  line-height: 3.3rem;
}
.top-bar, .fixed, .sticky {
  background: $nav-bar;
  overflow: visible;
}

.top-bar-section li.active:not(.has-form) a:not(.button) {
  background: #f1c40f;
  font-family: body-font;
  font-weight: bold;
  font-size: 1em;
  line-height: 3.6rem;
}

@media only screen and (max-width: 40em) {
  .top-bar .name h1 {
    text-align: center;
    padding-left: 0;
    line-height: 3rem;
  }
  .top-bar-section li.active:not(.has-form) a:not(.button) {
    background: #d35400;
    text-align: center;
    border-top: solid 0.25em $nav-bar;
    border-bottom: solid 0.25em $nav-bar;
    border-left: solid 0.4em $nav-bar;
    border-right: solid 0.4em $nav-bar;
    line-height: 2.6rem;
  }
  .benefit-tiles {
    height: 13em;
  }
  .howworks-tiles {
    height: 13em;
  }
  .tile-text {
    font-family: body-font;
    color: white;
    font-size: 1.2em;
    text-align: center;
    padding-left: .2em;
    padding-right: .2em;
  }

  .howworks-tile-text {
    font-family: body-font;
    color: #34495e;
    font-size: 1.2em;
    text-align: center;
    padding-left: .2em;
    padding-right: .2em;
  }

}

@media only screen and (min-width: 40.063em) {
  .benefit-tiles {
    height: 13em;
  }
  .howworks-tiles {
    height: 13em;
  }
  .tile-text {
    font-family: body-font;
    color: white;
    font-size: 1.2em;
    text-align: center;
    padding-left: .2em;
    padding-right: .2em;
  }

  .howworks-tile-text {
    font-family: body-font;
    color: #34495e;
    font-size: 1.2em;
    text-align: center;
    padding-left: .2em;
    padding-right: .2em;
  }
}

@media only screen and (min-width: 40.063em) and (max-width: 64em) {
  .benefit-tiles {
    height: 15em;
  }
  .howworks-tiles {
    height: 15em;
  }
  .tile-text {
    font-family: body-font;
    color: white;
    font-size: 1.2em;
    text-align: center;
    padding-left: .2em;
    padding-right: .2em;
  }

  .howworks-tile-text {
    font-family: body-font;
    color: #34495e;
    font-size: 1.2em;
    text-align: center;
    padding-left: .2em;
    padding-right: .2em;
  }
}

@media only screen and (min-width: 64.063em) {
  .benefit-tiles {
    height: 19em;
  }
  .howworks-tiles {
    height: 19em;
  }
  .tile-text {
    font-family: body-font;
    color: white;
    font-size: 1.2em;
    text-align: center;
    padding-left: .2em;
    padding-left: .2em;
  }
  .howworks-tile-text {
    font-family: body-font;
    color: #34495e;
    font-size: 1.2em;
    text-align: center;
    padding-left: .2em;
    padding-left: .2em;
  }
}

.top-bar {
  height: 3.6rem;
  line-height: 2.8125rem;
  position: relative;
}

.main {
  font-family: body-font;
  font-weight: bold;
  font-size: 2em;
  color: white;
  text-shadow: .5px .5px black;
  text-align: center;
  height: 50%;
  padding-top: 100px;
  padding-bottom: 200px;
}

.image {
  background-size: cover;
  background-repeat: no-repeat;
  background-image: url(<%= asset_path 'kayaks.jpg' %>);
}

.top-bar-section li.active:not(.has-form) a:not(.button):hover {
  background: #d35400;
  color: #FFFFFF;
}

.top-bar.expanded .title-area {
  background: $nav-bar;
}

.quote-container {
  margin-left: auto;
  margin-right: auto;
  background-color: #34495e;
}

.benefits {
  text-align: center;
  font-family: heading-font;
  font-weight: bold;
  color: #34495e;
}

.benefit-tiles h3 {
  font-family: body-font;
  font-size: 1.6em;
  font-weight: bold;
  color: white;
  border-bottom: solid 0.1em white;
}

.howworks-tiles h3 {
  font-family: body-font;
  font-size: 1.6em;
  font-weight: bold;
  color: #34495e;
  border-bottom: solid 0.05em #34495e;
}

.benefit-tiles {
  border: solid 2px $nav-bar;
  background-color: $nav-bar;
  text-align: center;
}

.howworks-tiles {
  border: solid 2px #34495e;
  background-color: white;
  text-align: center;
}

.small-block-grid-1 {
  margin-left: 1em;
  margin-right: 1em;
}

.italics {
  font-family: body-font;
  font-style: italic;
}

ul.nav li.right {
  font-family: body-font;
  font-weight: lighter;
  color: #bdc3c7;
  font-size: 1.1em;
  padding-right: 2.5em;
}

// footer CSS

.full-width {
  max-width: 1400px;
}


.footer {
  background-color: #bdc3c7;
  padding: 2rem 4rem;
  text-align: center;
  color: #2c3e50;
  i {
    font-size: 100px;
  }
}

.footer {
  h4 {
    color: #2c3e50;
    font-size: 1rem;
    font-weight: 400;
    text-transform: uppercase;
    margin-top: 2.5rem;
    margin-bottom: 10px;
  }
  p {
    font-weight: 300;
    font-size: .8rem;
  }
}

@media only screen and (min-width: 40.063em) {
.footer {
  .columns:nth-child(n+2) {
     border-left: 1px solid scale-color(#fff, $lightness: -30%);
     min-height: 280px;
  }
 }
}

.footer-links {
  list-style-type: none;
  a {
    color: #2c3e50;
    font-weight: 300;
    font-size: .8rem;
  }
  li {
    margin-top: .5rem;
  }
}
